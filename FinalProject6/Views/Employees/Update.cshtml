@model FinalProject6.ViewModels.UpdateEmployeeViewModel



<form asp-controller="Employees" asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Skill"></label>
        <input asp-for="Skill" />
        <span asp-validation-for="Skill"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hobby">Hobby</label>
        <input asp-for="Hobby" />
    </div>
    <div class="form-group">
        <label asp-for="Type">Employee Position</label>
        <select asp-for="Type" asp-items="Model.EmployeeTypes"></select>
    </div>
    <input type="submit" value="Update Employee" />
</form>